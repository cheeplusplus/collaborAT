{% extends "layouts/main.html.njk" %}
{% block content %}
    <h1>All audit logs</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Date</th>
            <th>Target</th>
            <th>Actor</th>
            <th>Endpoint</th>
            <th>Scope</th>
        </tr>
        </thead>
        <tbody>
        {% for entry in auditLogs %}
            <tr>
                <td>{{ entry.createdAt }}</td>
                <td><a href="https://bsky.app/profile/{{ entry.targetDid }}">{{ entry.targetDid }}</a></td>
                <td><a href="https://bsky.app/profile/{{ entry.actorDid }}">{{ entry.actorDid }}</a></td>
                <td>{{ entry.xrpcCall }}</td>
                <td><code>{{ entry.matchedScope }}</code></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
